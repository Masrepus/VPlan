<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeYellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="tintFab">@android:color/white</item>
        <item name="tintMenu">#ff303030</item>
        <item name="colorBackgroundLighter">#fffafafa</item>
    </style>

    <attr name="tintFab" format="color"/>
    <attr name="tintMenu" format="color"/>
    <attr name="colorBackgroundLighter" format="color"/>
    <color name="yellow">#f7dd2b</color>
    <color name="yellow_dark">#ffca28</color>
    <color name="yellow_focused">@color/yellow</color>
    <color name="blue">#274595</color>
    <color name="blue_focused">#2745d4</color>
    <color name="yellow_translucent">#aaf7dd2b</color>
    
    <style name="ShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#ccffffff</item>
        <item name="sv_showcaseColor">@color/blue</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitle</item>
    </style>

    <style name="ShowcaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="tintFab">#ff212121</item>
        <item name="colorAccent">@color/yellow_dark</item>
        <item name="colorBackgroundLighter">#ff424242</item>
        <item name="tintMenu">@android:color/white</item>
    </style>
</resources>