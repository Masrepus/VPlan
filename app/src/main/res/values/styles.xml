<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeYellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="tintFab">@color/tintFab_Y</item>
        <item name="tintMenu">@color/tintMenu_Y</item>
        <item name="colorBackgroundLighter">@color/colorBackgroundLighter_Y</item>
        <item name="yellow_selector">@drawable/yellow_selector_y</item>
        <item name="icon_selector">@color/icon_selector_y</item>
        <item name="text_selector">@color/text_selector_y</item>
        <item name="divider">@drawable/divider_y</item>
    </style>

    <attr name="tintFab" format="reference" />
    <attr name="tintMenu" format="reference" />
    <attr name="colorBackgroundLighter" format="reference" />
    <attr name="yellow_selector" format="reference" />
    <attr name="icon_selector" format="reference" />
    <attr name="text_selector" format="reference" />
    <attr name="divider" format="reference" />

    <color name="colorBackgroundLighter_Y">#fffafafa</color>
    <color name="colorBackgroundLighter_D">#ff424242</color>

    <color name="tintFab_Y">@android:color/white</color>
    <color name="tintFab_D">#ff212121</color>

    <color name="tintMenu_Y">#ff303030</color>
    <color name="tintMenu_D">@android:color/white</color>

    <color name="yellow">#f7dd2b</color>
    <color name="yellow_dark">#ffca28</color>
    <color name="yellow_focused">@color/yellow</color>
    <color name="blue">#274595</color>
    <color name="blue_focused">#2745d4</color>
    <color name="yellow_translucent">#aaf7dd2b</color>

    <style name="ShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#ccffffff</item>
        <item name="sv_showcaseColor">@color/blue</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitle</item>
    </style>

    <style name="ShowcaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="tintFab">@color/tintFab_D</item>
        <item name="colorAccent">@color/yellow_dark</item>
        <item name="colorBackgroundLighter">@color/colorBackgroundLighter_D</item>
        <item name="tintMenu">@color/tintMenu_D</item>
        <item name="yellow_selector">@drawable/yellow_selector_d</item>
        <item name="icon_selector">@color/icon_selector_d</item>
        <item name="text_selector">@color/text_selector_d</item>
        <item name="divider">@drawable/divider_d</item>
    </style>
</resources>