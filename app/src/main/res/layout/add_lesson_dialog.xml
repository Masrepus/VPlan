<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lessonPickerLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="false"
            android:id="@+id/subjectLayout"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/subject"
                android:id="@+id/textView7"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subjectACTV"
                android:layout_marginTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/roomLayout"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/subjectLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room"
                android:id="@+id/textView9"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/roomACTV"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="false"
        android:id="@+id/lessonPickerLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lesson"
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true" />

        <com.masrepus.vplanapp.MyNumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            min="1"
            max="11"
            android:layout_alignParentRight="false"
            android:id="@+id/lessonPicker"
            android:layout_below="@+id/textView8" />

    </RelativeLayout>

</RelativeLayout>